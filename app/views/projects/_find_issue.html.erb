<div class="col-md-6 col-lg-6">
    <h5 class="page-header">Find and edit issue</h5>
    <%= form_tag(project_goto_issue_path(@project), method: :post, class: 'form-inline') do |f| %>
      <%= label_tag "Issue" %>
      <%= select_tag 'issue_id', {}, {id: 'search-issue-id'} %>
      <%= submit_tag 'Go', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $('#search-issue-id').selectize({
      plugins: ['remove_button'],
      delimiter: ',',
      persist: false,
      valueField: 'id',
      labelField: 'name',
      searchField: 'name',
      options: [],
      create: false,
      load: function(query, callback) {
            // if (query.length < 3) return callback();
            $.ajax({
                url: '<%= project_search_issue_path(@project.id) %>',
                type: 'GET',
                dataType: 'json',
                data: {
                    q: query,
                },
                error: function() {
                    callback();
                },
                success: function(res) {
                    callback(res);
                }
            });
        }
    });
  });
</script>
