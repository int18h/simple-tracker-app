<%  buttons = {
        :back => {:caption => 'Back', :class => 'btn btn-link', :path => projects_path}
    }
   if (is_owner_of_project(@project))
     buttons[:edit] = {:caption => 'Edit', :class=>'btn btn-primary', :path => edit_project_path(@project)}
   end
%>
<%= header('h1', {
      :title => 'Show Project',
      :text => @project.name,
      :buttons => buttons
    })
%>

<div class="row">
  <div class="col-md-6 col-lg-6">
    <h5 class="page-header">Information</h5>
    <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          </thead>
          <tbody>
            <tr>
              <td>Name</td>
              <td><%= @project.name %></td>
            </tr>
            <tr>
              <td>Owner</td>
              <td><%= profile_link_to_user(@project.owner) %></td>
            </tr>
            <tr>
              <td>Team</td>
              <td><%= @project.team.name %></td>
            </tr>
            <tr>
              <td>Status</td>
              <td><%= @project.status.humanize %></td>
            </tr>
          </tbody>
        </table>
      </div>        
  </div>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <%= render 'find_issue' %>
  </div>
</div>
</div>
<div class="row ">
  <div class="col-md-12 col-lg-12 box">
  <%= render template: "issues/index",  locals: { :project => @project } %>
  </div>
</div>

