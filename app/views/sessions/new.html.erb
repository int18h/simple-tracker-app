<%= page_header('Sign In', "Sign In") %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do | f | %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :class => 'form-control' %>
        <%= link_to "Forgot your password?", forgot_path,:class => 'btn btn-link'%>
      </div>
      <div class="form-group">
        <%= f.submit "Sign In", :class => "btn btn-primary" %>
      </div>
    <% end %>
    <div class="row ">
      <p class="col-md-2">New user? <%= link_to "Sign up now!", signup_path %></p>  
    </div>
  </div>
</div>
