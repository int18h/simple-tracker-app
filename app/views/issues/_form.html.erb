<%= bootstrap_form_for(@issue, :url => project_issues_path(params[:project_id])) do | f |%>
  <%= f.text_field :name %>
  <%= f.collection_select :worker, @project.team.users, :id, :full_name, {prompt: "Select current worker "}, {class: "form-control"} %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>