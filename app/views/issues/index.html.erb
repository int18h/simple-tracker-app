<%= header('h3', {
  :text => "List of Issues for project #{project.name}", 
  :buttons => {
    :new => {:caption => 'New issue', :class=>'btn btn-primary', :path => new_project_issue_path(project.id)},
  }}) 
%>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
    <% project.issues.each do | issue | %>
      <%= render 'issues/issue', issue: issue %>
    <% end %>
    </tbody>
  </table>
</div>
