<p id="notice"><%= notice %></p>

<h1>Listing Workloads</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Description</th>
            <th>Hours</th>
            <th>User</th>
            <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% issue.workloads.each do |workload| %>
            <%= render 'workloads/workload', workload: workload %>
        <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'New Workload', new_project_issue_workload_path(issue_id: issue.id) %>
</div>
