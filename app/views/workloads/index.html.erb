<%= header('h3', {
   :text => "Workload for issue ##{@issue.id}",
   :buttons => {
       :new_issue => {:caption => 'Add new', :class=>'btn btn-primary', :path => new_project_issue_workload_path(issue_id: issue.id)},
   }})
%>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Description</th>
            <th>Hours</th>
            <th>User</th>
            <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% issue.workloads.each do |workload| %>
            <%= render 'workloads/workload', workload: workload %>
        <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'New Workload', new_project_issue_workload_path(issue_id: issue.id) %>
</div>
