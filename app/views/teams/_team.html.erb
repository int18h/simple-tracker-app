<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="block-inline">Teammates</h3> <%= link_to "Add new", new_team_worker_path(team.id), :class=>"btn btn-primary" %></div>
  <div class="panel-body">
    <div class="table-responsive">
      <!-- Table -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Full name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <%= render(team.workers) %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <%= button_to 'Apply', team, method: :update, data: { confirm: 'Are you sure ?' }, :class => "btn btn-success pull-left" %>
    <%= button_to 'Empty team', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger pull-right" %>
  </div>
</div>
<div class="row-fluid">
</div>

