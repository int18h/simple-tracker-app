<%
   buttons = {:back => {:caption => 'Back', :class => 'btn btn-link', :path => teams_path} }
   buttons[:edit] = {:caption => 'Edit', :class=>'btn btn-primary', :path => edit_team_path(@team)} if is_owner_of_team(@team)

%>
<%= header('h1', {
                  :title => 'Show Team',
                  :text => "Show Team",
                  :buttons => buttons
               })
%>

<div class="row">
  <div class="col-md-6 col-lg-6">
    <h5 class="page-header">Team info</h5>
    <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          </thead>
          <tbody>
            <tr>
              <td>Name</td>
              <td><%= @team.name %></td>
            </tr>
            <tr>
              <td>Owner</td>
              <td><%= profile_link_to_user(@team.owner) %></td>
            </tr>
          </tbody>
        </table>
      </div>        
  </div>
  <%= render "teammates" %>
</div>