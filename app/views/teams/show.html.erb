<%= header('h1', {
  :title => 'Show Team', 
  :text => "Show Team", 
  :buttons => {
    :edit => {:caption => 'Edit', :class=>'btn btn-primary', :path => edit_team_path(@team)},
    :back => {:caption => 'Back', :class => 'btn btn-link', :path => teams_path}
  }}) 
%>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

    <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th colspan="2">Team info</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Name</td>
              <td><%= @team.name %></td>
            </tr>
            <tr>
              <td>Owner</td>
              <td><%= profile_link_to_user(@team.owner) %></td>
            </tr>
          </tbody>
        </table>
      </div>        
  </div>
</div>